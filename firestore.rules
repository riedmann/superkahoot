rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to quizzes for all users
    match /quizzes/{quizId} {
      allow read: if true;
      
      // Allow write access only to authenticated users (for quiz creation/editing)
      allow write: if request.auth != null;
      
      match /questions/{questionId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // Allow access to games for real-time multiplayer functionality
    match /games/{gameId} {
      // Allow read access to anyone who knows the game ID
      allow read: if true;
      
      // Allow creating games (hosts need this)
      allow create: if true;
      
      // Allow updates to games (for joining, answering questions, etc.)
      allow update: if true;
      
      // Only allow deletion by authenticated users
      allow delete: if request.auth != null;
    }
    
    // Allow authenticated users to read their own user document (for role checking)
    match /users/{userId} {
      // Allow users to read their own user document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Only allow authenticated users to create/update user documents
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}